---
import Twemoji from '../general/Twemoji.vue'

type Props = {
  title: string
  icon: string
  abstract: string
  link: string
}

const { title, icon, abstract, link } = Astro.props
---

<article class="flex flex-col">
  <div class="bg-gray-800 p-4 font-bold">{title}</div>
  <div class="flex flex-grow flex-col justify-between gap-4 bg-gray-700 p-4">
    <div>{abstract}</div>
    <div class="flex items-center justify-between">
      <div class="aspect-square h-8">
        <Twemoji emoji={icon} />
      </div>
      <a class="w-fit bg-gray-800 px-2 py-1 font-semibold hover:bg-gray-700" href={link} target="_blank">{link[0] === '/' ? 'PDF' : 'WEB'}</a>
    </div>
  </div>
</article>
