---
import { ViewTransitions } from 'astro:transitions'
import NavigationLink from '../components/general/NavigationLink.astro'

type Props = {
  title: string
}

const { title } = Astro.props
---

<html class="scroll-smooth" lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Iulian Oleniuc" />
    <meta name="keywords" content="blog, computer science, programming" />
    <meta name="description" content="The blog of Iulian Oleniuc, Master’s student at the Faculty of Computer Science Iași." />
    <meta property="og:image" content="https://ioleniuc.ro/og.png" />
    <title>{title} — Iulian Oleniuc</title>
    <ViewTransitions />
  </head>
  <body class="bg-gray-950 text-gray-200 antialiased selection:bg-green-300 selection:text-gray-950 [&_*:focus-visible]:outline-dashed [&_*:focus-visible]:outline-2 [&_*:focus-visible]:outline-offset-2 [&_*:focus-visible]:outline-gray-500">
    <header class="sticky top-0 z-30 bg-gray-900 shadow-lg">
      <div class="mx-auto flex max-w-screen-2xl justify-between px-12 py-8 max-md:p-4 [&>*]:w-fit">
        <div class="text-2xl font-bold">Iulian Oleniuc</div>
        <nav class="flex gap-4 max-md:gap-2">
          <NavigationLink link="/" title="Home" icon="🛖" />
          <NavigationLink link="/portfolio/" title="Portfolio" icon="🏆" />
          <NavigationLink link="/blog/" title="Blog" icon="✍️" />
        </nav>
      </div>
    </header>
    <main class="bg-gray-950">
      <div class="mx-auto max-w-screen-2xl p-12 max-md:px-4">
        <slot />
      </div>
    </main>
    <footer class="flex justify-center bg-gray-900 py-8 shadow-lg max-md:py-4">
      <div class="text-lg font-bold text-gray-600">Copyright © {new Date().getFullYear()} — Iulian Oleniuc</div>
    </footer>
    <style is:global>
      p,
      li {
        line-height: 1.618 !important;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        line-height: 1.2 !important;
      }

      .emoji {
        display: inline;
        margin-bottom: 0.15em;
        height: 1em;
      }

      input[type='number']::-webkit-inner-spin-button,
      input[type='number']::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
      }
    </style>
  </body>
</html>
